<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
  <Appenders>
    <Console name="Console" target="SYSTEM_ERR">
      <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{-1} - %msg%n"/>
    </Console>
    <Console name="BiremeConsole" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{-1} - %msg%n"/>"
    </Console>

      <!-- 按天输出日志 -->
      <RollingFile name="RollingFile" fileName="/opt/websuite/bireme-2.0.0-alpha-1/logs/bireme.log"
                   filePattern="/opt/websuite/bireme-2.0.0-alpha-1/logs/bireme-%d{yyyy-MM-dd}.log">
          <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{-1} - %msg%n" />
          <Policies>
              <TimeBasedTriggeringPolicy modulate="true" interval="1"/>
          </Policies>
      </RollingFile>

  </Appenders>

  <Loggers>
    <Root level="error">
        <AppenderRef ref="Console"/>
    </Root>
    <Logger name="cn.hashdata.bireme" level="info" additivity="false">
        <AppenderRef ref="RollingFile" />
        <AppenderRef ref="BiremeConsole" />
    </Logger>

  </Loggers>
</Configuration>
